<link rel="stylesheet" href="css/style.css">
</head>

<body>

<%- include('../partials/header.ejs')%>

<section class="banner">
  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <h5><%=record.title%></h5>
        <P><%=record.desc%></P>
      <a href="/banner"><button class="btn btn-info">Details</button></a>
      </div>
      <div class="col-md-4"><img class="banner-img" src="/upload/<%=record.img%>" class="img-fluid d-block mx-auto" alt=""></div>
    </div>
  </div>
  <img src="media/border1.png" alt="">
</section>

<section class="services">
<div class="container">
  <div class="row">
    <h2>services</h2>
    <%serviceRecord.forEach((result)=>{%>
      <div class="col-md-3">
        <img src="/upload/<%=result.img%>" alt="">
        <h4><%=result.name%></h4>
        <p><%=result.desc%></p>
        <a href="/service/<%=result.id%>"><button class="btn btn-success">more details...... .</button></a>
      </div>

    <%})%>
  
   
</div>
</section>

<section class="test">
  <div class="container">
    <div class="row">
      <h1>Testinomials</h1>
      <%testiRecord.forEach((result)=>{%>
        <div class="col-md-3">
          <img style="width: 100px;" src="/upload/<%=result.img%>" alt="">
          <p><span><i class="bi bi-quote"></i></span><%=result.desc%><span><i class="bi bi-quote"></i></span></p>
          <h6><%=result.name%></h6>
        </div>
      <%})%>
      
    </div>
  </div>

</section>

<%- include('../partials/footer.ejs')%>

</section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" 
