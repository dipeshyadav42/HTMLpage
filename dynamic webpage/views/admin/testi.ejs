        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/admin/css/style.css">
    </head>
<body>
    

<%- include('../../partials/admin/header.ejs')%>
<section id="mid">
    <div class="container">
        <div class="row">
            <%- include('../../partials/admin/left.ejs')%>
            <div class="col-md-9">
                <h2>Testinomial Management</h2>
                <a href="/admin/testiadd"><button class="btn btn-success form-control mt-2">Add Testinomial Here</button></a>
                <table class="table table-hover">
                    <tr>
                        <th>S.NO</th>
                        <th>Image</th>
                        <th>Description</th>
                        <th>Name</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                    <%record.forEach((result,key)=>{%>
                        <tr>
                            <td><%=key+1%></td>
                            <td><img style="width: 100px;" src="/upload/<%=result.img%>" alt=""></td>
                            <td><%=result.desc%></td>
                            <td><%=result.name%></td>
                            <td><a href="/admin/testistatusupdate/<%=result.id%>"><button class="btn btn-success"><%=result.status%></button>     </a></td>
                            <td><a href="/admin/testidelete/<%=result.id%>"><button class="btn btn-danger">Delete</button></a></td>
                        </tr>
                    <%})%>
                    <%if(!record.length){%>
                        <tr>
                            <td colspan="6"><h4 class="text-center"> NO RECORD FOUND</h4></td>
                        </tr>
                        <%}%>
                        
                 
                   
                </table>
            </div>
        </div>
    </div>

</section>

<%- include('../../partials/admin/footer.ejs')%>
</body>
</html>