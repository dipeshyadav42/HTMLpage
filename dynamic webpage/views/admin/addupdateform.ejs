<%- include('../../partials/admin/header.ejs')%>
<section id="mid">
    <div class="container">
        <div class="row">
            <%- include('../../partials/admin/left.ejs')%>
            <div class="col-md-9">
                <h2>Add update form</h2>
                <form action="/admin/addupdaterecord/<%=record.id%>" method="post">
                <label for="">Address</label>
                <input type="text" name="add" id="" value="<%=record.add%>" class="form-control">
                <label for="">Landline Number</label>
                <input type="number" name="landline" id="" value="<%=record.landline%>" class="form-control">
                <label for="">Mobile Number</label>
                <input type="number" name="mobile" id=""  value="<%=record.mobile%>" class="form-control">
                <label for="">Email</label>
                <input type="email" name="email" id="" value="<%=record.email%>" class="form-control">
                <label for="">Instagram</label>
                <input type="text" name="insta" id="" value="<%=record.insta%>" class="form-control">
                <label for="">Twitter</label>
                <input type="text" name="twitter" id="" value="<%=record.twitter%>" class="form-control">
                <button type="submit" class="form-control btn btn-success mt-2 mb-3">Update</button>
            </form>
            </div>
        </div>
    </div>

